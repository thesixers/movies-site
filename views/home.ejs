<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gx Movies</title>
    <link rel="stylesheet" href="/style.css">
    <%- include('partials/head.ejs') %> 
</head>
<body>
    <!--Scroll-progress-bar=======================-->
    <div id="progress">
        <span id="progress-value"></span>
    </div>
    
    <%- include('./partials/nav.ejs') %>




    <!-- slider================================== -->
    <section id="main-slider">

        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
              
              
              
              <% if (movies.length > 0) { %>
                <% for (i = 0; i < 4; i++) { %>
                    
                    <% const movie = movies[i] %>
                              <div class="swiper-slide">
      
                      <!-- 3=----------->
                      <!-- box------------------>
              <div class="main-slider-box">
      
                  <!-- overlayer------>
                  <a href="/genesix/<%= movie._id %>" class="main-slider-overlay" target="_blank">
                      <i class="fas fa-play"></i>
                  </a>
      
                  <!-- img------------------->
                  <div class="main-slider-img">
                      <img src="/Movies/<%= movie.image %>" alt="poster"/>
                  </div>
      
                  <!-- text------------------ -->
                  <div class="main-slider-text">
                      <!-- quality-------- -->
                      <span class="quality"><%= movie.quality %></span>
      
                      <!-- bottom-text -->
                      <div class="bottom-text">
                          <!-- name -->
                          <div class="movie-name">
                              <span><%= movies.year %></span>
                              <strong><%= movie.title %></strong>
                          </div>
      
                          <!-- category-and-rating -->
                          <div class="category-rating">
                              <!-- category -->
                              <div class="category">
                                  <a href="#"><%= movie.genre %></a>,
                              </div>
                              <!-- rating -->
                              <div class="rating">
                                  5.2 <img src="/images/OIP (3).jpeg" alt="imbd"/>
                              </div>
                          </div>
      
                      </div>
                  </div>
      
      
              </div>
      
                    </div>
            
                <% } %>
                <% } else { %>
                  <h3> They aren't any movies </h3>
      
                   
                <% } %> 

            </div>
          </div>

        

    </section>

    <!--btns--------------------->
    <div class="slider-btns">
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>


    <!--slider-end---------------->
 

    <!--==latest-Movies------------------======-->
    <section id="latest">

        <!--heading------>
        <div class="latest-heading">
            <h1>Latest Movies</h1>
        </div>

        <!--container---------->
        <div class="post-container">


            <% if (movies.length > 0) { %>
                <% for (i = 0; i < movies.length; i++) { %>
                    
                    <% const movie = movies[i] %>
                      <% if(movie.type === 'movie') { %>

                         <!--post-box------------->
                       <div class="post-box" >
                        <!--img----->
                        <div class="post-img">
                            <img src="/Movies/<%= movie.image %>" alt="">
                        </div>
                        <!-- text------------------ -->
                    <div class="main-slider-text">
                        <!-- quality-------- -->
                        <span class="quality"><%= movie.quality %></span>
            
                        <!-- bottom-text -->
                        <div class="bottom-text">
                            <!-- name -->
                            <div class="movie-name">
                                <span><%= movie.year %></span>
                                <a href="/genesix/<%= movie._id %>"><%= movie.title %></a>
                            </div>
            
                            <!-- category-and-rating -->
                            <div class="category-rating">
                                <!-- category -->
                     
                                <div class="category">
                                    <a href="#"><%= movie.genre %></a>,
                                </div>
                                <!-- rating -->
                                <div class="rating">
                                    5.2 <img src="/images/OIP (3).jpeg" alt="imbd"/>
                                </div>
                            </div>
            
                        </div>
                    </div>
                    </div>

                      <% } %>        
                <% } %>
                <% } else { %>
                  <h3> They aren't any movies </h3>
            
                   
                <% } %> 

        </div>
        <!--container-end-->
        
        


        <!-- page-number-----------
        <div class="page-number">
            <a href="#" class="page-active">1</a>
            <a href="#">2</a>
            <a href="#">3</a>
            ....
            <a href="#">100</a>
        </div> -->
    
            
        
    </section>
    <!--latest-post-end----------->

    <!--==latest-Series------------------======-->
    <section id="latest">

        <!--heading------>
        <div class="latest-heading">
            <h1>Latest Series</h1>
        </div>

        <!--container---------->
        <div class="post-container">


            <% if (movies.length > 0) { %>
                <% for (i = 0; i < movies.length; i++) { %>
                    
                    <% const movie = movies[i] %>
                      <% if(movie.type === 'series') { %>

                         <!--post-box------------->
                       <div class="post-box">
                        <!--img----->
                        <div class="post-img">
                            <img src="/Movies/<%= movie.image %>" alt="">
                        </div>
                        <!-- text------------------ -->
                    <div class="main-slider-text">
                        <!-- quality-------- -->
                        <span class="quality"><%= movie.quality %></span>
            
                        <!-- bottom-text -->
                        <div class="bottom-text"> 
                            <!-- name -->
                            <div class="movie-name">
                                <span><%= movie.year %></span>
                                <a href="/genesix/<%= movie._id %>"><%= movie.title %></a>
                            </div>
            
                            <!-- category-and-rating -->
                            <div class="category-rating">
                                <!-- category -->
                     
                                <div class="category">
                                    <a href="#"><%= movie.genre %></a>,
                                </div>
                                <!-- rating -->
                                <div class="rating">
                                    5.2 <img src="/images/OIP (3).jpeg" alt="imbd"/>
                                </div>
                            </div>
            
                        </div>
                    </div>
                    </div>

                      <% } %>        
                <% } %>
                <% } else { %>
                  <h3> They aren't any movies </h3>
            
                   
                <% } %> 

        </div>
        <!--container-end-->
        
        


        <!--page-number------------->
        <!-- <div class="page-number">
            <a href="#" class="page-active">1</a>
            <a href="#">2</a>
            <a href="#">3</a>
            ....
            <a href="#">100</a>
        </div> -->
    
            
        
    </section>
    <!--latest-post-end----------->



    <!--footer======================-->

    <%- include('partials/footer') %>

    <!-- js-swiper==== -->
    <script src="/Swiper Files/swiper-bundle.min.js"></script>
    <!--jquery=================================================-->
    <script src="/js/jquery.js"></script>

  <script src="/js/home.js"></script>

  <script src="/js/search.js"></script>
</body>
</html>
